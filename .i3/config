bindsym Mod1+Prior exec pactl set-sink-volume 1 -- +5%
bindsym Mod1+Next exec pactl set-sink-volume 1 -- -5%
bindsym Mod1+End exec pactl set-sink-volume 1 0%
bindsym Mod1+Home exec pactl set-sink-volume 1 50%
